{
  "name": "payment-api",
  "version": "0.0.1",
  "description": "Payment api",
  "main": "src/index.ts",
  "scripts": {
    "start": "nodemon -r tsconfig-paths/register src/index.ts",
    "start:prod": "node -r tsconfig-paths/register ./dist/src/index.js",
    "build": "ts-node -r tsconfig-paths/register build.ts && tsc-alias -p tsconfig.json",
    "test": "jest --config=jest.config.js",
    "lint": "eslint src --cache --ext .ts",
    "lint:fix": "eslint src --cache --fix --ext .ts",
    "prettier": "prettier --check --no-error-on-unmatched-pattern --ignore-unknown ./**/*",
    "prettier:fix": "prettier --write --no-error-on-unmatched-pattern --ignore-unknown ./**/*"
  },
  "author": "Maxi",
  "engines": {
    "node": ">18.0.0",
    "npm": ">9.0.0"
  },
  "dependencies": {
    "axios": "^1.4.0",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.1.4",
    "express": "^4.18.2",
    "express-openapi-validator": "^5.0.4",
    "express-winston": "^4.2.0",
    "helmet": "^7.0.0",
    "jwt-decode": "^3.1.2",
    "mongodb": "^5.7.0",
    "swagger-ui-express": "^4.6.3",
    "tsc-alias": "^1.8.6",
    "winston": "^3.9.0",
    "yamljs": "^0.3.0",
    "tsconfig-paths": "^4.2.0"
  },
  "devDependencies": {
    "@types/compression": "^1.7.2",
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.17",
    "@types/fs-extra": "^11.0.1",
    "@types/jest": "^29.5.2",
    "@types/node": "^18.16.19",
    "@types/swagger-ui-express": "^4.1.3",
    "@types/yamljs": "^0.2.31",
    "@typescript-eslint/eslint-plugin": "^5.59.9",
    "@typescript-eslint/parser": "^5.59.9",
    "eslint": "^8.42.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-import": "^2.27.5",
    "fs-extra": "^11.1.1",
    "jest": "^29.5.0",
    "lint-staged": "^13.2.2",
    "nodemon": "^2.0.22",
    "prettier": "^2.8.8",
    "ts-jest": "^29.1.0",
    "ts-node": "^10.9.1",
    "typescript": "^5.1.3"
  },
  "lint-staged": {
    "*.{js,ts,css,md}": "prettier --write --no-error-on-unmatched-pattern --ignore-unknown",
    "*.ts": "npm run lint --"
  }
}
